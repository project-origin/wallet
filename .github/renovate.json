{
    "labels": [
        "chore"
    ],
    "platformAutomerge": true,
    "packageRules": [
        {
            "description": "Automerge non-major updates",
            "automerge": true,
            "matchUpdateTypes": [
                "minor",
                "patch"
            ]
        },
        {
            "groupName": "nuget",
            "automerge": true,
            "description": "Dotnet nuget packages",
            "matchDatasources": [
                "nuget"
            ],
            "matchPackagePatterns": [
                ".*"
            ]
        },
        {
            "groupName": "Dockerfile updates",
            "automerge": true,
            "matchFileNames": [
                "**/Dockerfile"
            ]
        }
    ]
}
