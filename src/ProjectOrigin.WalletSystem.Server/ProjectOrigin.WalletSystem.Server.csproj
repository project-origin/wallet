<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Dapper" Version="2.0.151" />
    <PackageReference Include="dbup-postgresql" Version="5.0.8" />
    <PackageReference Include="Grpc.AspNetCore" Version="2.56.0" />
    <PackageReference Include="MassTransit" Version="8.1.0" />
    <PackageReference Include="MassTransit.RabbitMQ" Version="8.1.0" />
    <PackageReference Include="Npgsql" Version="7.0.4" />
    <PackageReference Include="NSec.Cryptography" Version="22.4.0" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="7.0.10" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="7.0.0" />
    <PackageReference Include="ProjectOrigin.PedersenCommitment" Version="1.0.3" />
    <PackageReference Include="ProjectOrigin.HierarchicalDeterministicKeys" Version="0.2.2" />
    <PackageReference Include="Serilog.AspNetCore" Version="7.0.0" />
    <PackageReference Include="Serilog.Enrichers.Span" Version="3.1.0" />
    <PackageReference Include="Serilog.Expressions" Version="3.4.1" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Database\Scripts\202308280900-migrate-number-increment.sql" />
    <EmbeddedResource Include="Database\Scripts\202308041301-number-increment.sql" />
    <EmbeddedResource Include="Database\Scripts\202308021200-add-slice-state.sql" />
    <EmbeddedResource Include="Database\Scripts\202308010911-publickey-constraint.sql" />
    <EmbeddedResource Include="Database\Scripts\202307131007-alter-wallet-section.sql" />
    <EmbeddedResource Include="Database\Scripts\202305101334-create-wallet-tables.sql" />
    <EmbeddedResource Include="Database\Scripts\202306151348-create-attributes-table.sql" />
    <EmbeddedResource Include="Database\Scripts\202305151549-receive-slice-tables.sql" />
  </ItemGroup>


  <Target Name="Updating grpc references" BeforeTargets="PreBuildEvent">
    <Exec Command="dotnet dotnet-grpc refresh -p $(ProjectDir)" />
  </Target>

  <ItemGroup>
    <Protobuf Include="../Protos/common.proto" Link="Protos\common.proto">
      <SourceUrl>https://raw.githubusercontent.com/project-origin/registry/v0.2.0/src/Protos/common.proto</SourceUrl>
    </Protobuf>
    <Protobuf Include="../Protos/registry.proto" Link="Protos\registry.proto">
      <SourceUrl>https://raw.githubusercontent.com/project-origin/registry/v0.2.0/src/Protos/registry.proto</SourceUrl>
    </Protobuf>
    <Protobuf Include="../Protos/electricity.proto" Link="Protos\electricity.proto">
      <SourceUrl>https://raw.githubusercontent.com/project-origin/registry/v0.2.0/src/Protos/electricity.proto</SourceUrl>
    </Protobuf>
    <Protobuf Include="..\Protos\wallet.proto" GrpcServices="Both" />
  </ItemGroup>

</Project>
